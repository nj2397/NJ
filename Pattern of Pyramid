#include <stdio.h>

int main()
{
    int i,j,k,n;
    
    scanf("%d", &n);
    
    for(i=0; i<n; i++)
    {
        for(j=0; j<n-i; j++)
        {
            printf(" ");
        }
        
        for(k=n-1; k>j-2; k--)
        {
            printf("* ");//toggle betwwen i and j to see the difference 
        }
        
        printf("\n");
    }
    return 0;
}
