#include <iostream>

int factorial(int a);
int main()
{
    int i;
    int f;
    
    std::cout<<"Enter the number \n";
    std::cin>>i;
    
    f=factorial(i);
    std::cout<<"The factorial of the number is "<<f;
    
    return 0;
}

int factorial(int a)
{
    if (a==0)
    {
        return 1;
    }
    
    return (a*factorial(a-1));
}




