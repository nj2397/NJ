#include <stdio.h>
#include <stdlib.h>

int main()
{
     int i,j,k,n;
    
    scanf("%d", &n);
    
    for(i=n; i>=-n; i--)
    {
        for(j=1; j<=abs(i); j++)
        {
            printf(" ");
        }
        
        for(k=n; k>=abs(i); k--)
        {
            printf("* ");//toggle between i,j,k to see the difference in pattern
        }
        
        printf("\n");
    }

    return 0;
}
